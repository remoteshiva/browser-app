rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    match /shivas/{document} {
      // TODO: Improve security so only allows read if visitor key or mourner key matches this shiva
      allow read: if true
      allow create: if request.auth.uid == request.resource.data.uid;
      allow update: if request.auth.uid == resource.data.uid;
      allow delete: if false
    }

    match /users/{uid} {
      allow read: if true
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      allow delete: if false
    }

    match /messages_add_visitor/{document} {
      allow create: if true;
      allow update: if true;
    }

    match /messages_new_user/{document} {
      allow create: if true;
      allow update: if true;
    }

    match /messages_timeslot_deleted_visitor/{document} {
      allow create: if true;
    	allow update: if true;
    }
  }
}
